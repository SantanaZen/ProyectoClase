<!DOCTYPE html>
<html>
<head>
    <title></title>
    <!--Estilos-->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!--Scripts-->
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <h1 class="text-left">Agregar Usuario</h1>   
        <div class="conteiner col-lg-12">
            <div class="row justify-content-center">
                <div class="form-group col-sm-4">
                    <label>Nombre</label>
                    <div>
                        <input type="text" name="name" id="name" class="form-control  required" placeholder="Ingresa el nombre">
                    </div>
                </div>
                <div class="form-group col-sm-4">
                    <label>Primer Apellido</label>
                    <div>
                        <input type="text" name="apellido1" id="apellido1" class="form-control required" placeholder="Ingresa el primer apellido">
                    </div>
                </div>
                <div class="form-group col-sm-4">
                    <label>Segundo Apellido</label>
                    <div>
                        <input type="text" name="apellido2" id="apellido2" class="form-control required" placeholder="Ingresa el segundo apellido">
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="form-group col-sm-4">
                    <label>Fecha de Nacimiento</label>
                    <div>
                        <input type="text" name="nacimiento" id="nacimiento" class="form-control required" placeholder="Ingresa la fecha de nacimiento">
                    </div>
                </div>
                <div class="form-group col-sm-4">
                    <label>Correo</label>
                    <div>
                        <input type="email" name="correo" id="correo" class="form-control required" placeholder="Ingresa el correo">
                    </div>
                </div>
                <div class="form-group col-sm-4">
                    <label>Usuario</label>
                    <div>
                        <input type="text" name="user" id="user" class="form-control required" placeholder="Ingresa un nombre de usuario">
                    </div>
                </div>      
                
            </div>   
            <div class="row justify-content-center">                
                <div class="form-group col-sm-4">
                    <label>Contraseña</label>
                    <div>
                        <input type="password" name="password" id="password" class="form-control required" placeholder="Ingresa una contraseña">
                    </div>
                </div>
            </div>     

            <div class="col-md-12">                
                    <div class="form-group">
                        <div>
                            <input type="submit" value="Registrar" id="btn-registrar" class="btn btn-primary col-10">
                        </div>
                    </div>                             
            </div>
        </div>
    
</body>
</html>
